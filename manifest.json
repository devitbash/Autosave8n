{
  "name": "Autosave8n",
  "manifest_version": 3,
  "version": "0.2.1",
  "icons": {
    "64": "image/logo.png"
  },
  "description": "Autosave for N8N",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["autosave8n.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["animation.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}